        'content' => '',
    );

    if ($delta == 'lcpmx_footer') {
        $block['content'] = array(
            '#theme' => 'lcpmx_footer'
        );
    };

    if ($delta == 'lcpmx_aviso_privacidad') {
        $block['content'] = array(
            '#theme' => 'lcpmx_aviso_privacidad'
        );
    };

    if ($delta == 'lcpmx_directorio') {
        $block['content'] = array(
            '#theme' => 'lcpmx_directorio'
        );
    };
    return $block;
}

